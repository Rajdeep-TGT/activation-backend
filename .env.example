# Server config
PORT=3000

# Azure Table Storage
AZURE_TABLE_STORAGE_ACCOUNT_NAME=your_account_name
AZURE_TABLE_STORAGE_ACCOUNT_KEY=your_account_key
AZURE_TABLE_NAME=ActivationKeys

# SMTP Email Settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASS=your_app_password
SMTP_FROM=Activation Team <your@email.com>

# Optional: Domain to validate tokens for
ALLOWED_DOMAIN=example.com
